<div class="navbar">
  <%= image_tag 'logo.png' %>
  <div>
    <%= link_to 'Home', root_path %>
    <%= link_to "new category", new_category_path %>
  </div>
</div>

<div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>')">
  <div>
    <h1>Cookbook</h1>
    <h3>Save Your Favourite Recipes</h3>
  </div>
</div>

<div class="container">

  <div class="info-top">
    <h3>List of Categories</h3>
    <%= link_to 'New Category', new_category_path, class: "btn btn-warning" %>
  </div>

  <div class="cards">
    <% @categories.each do |category| %>

      <%= link_to category_path(category) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "category.jpg" %>')">
          <h2><%= category.name %></h2>
        </div>
     <% end %>

    <% end %>
  </div>
</div>
