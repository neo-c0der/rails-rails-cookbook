<div class="navbar">
  <%= image_tag 'logo.png' %>
  <div>
    <%= link_to 'Home', root_path %>
    <%= link_to "new category", new_category_path %>
  </div>
</div>

<div class="banner" style="background-image: url('<%= image_path "category.jpg" %>')">
  <div>
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class="container">
  <div class="info-top">
      <h3>Recipes</h3>
      <%= link_to 'Add a Recipe', new_category_bookmark_path(@category), class: "btn btn-warning" %>
    </div>

  <div class="cards">
      <% @category.bookmarks.each do |bookmark| %>
        <div class="card-recipe">
          <img src="<%= bookmark.recipe.image_url %>" alt="recipe image">

          <div class="card-recipe-description">
            <h2><%= bookmark.recipe.name %></h2>
            <p><%= bookmark.recipe.description.truncate(200) %></p>
          </div>

          <div class="card-recipe-info">
            <div>
              <%= bookmark.comment %>
            </div>

            <div>
              <%= bookmark.recipe.rating %>
            </div>

          </div>>

        </div>
      <% end %>
  </div>

</div>

<h1><%= @category.name %></h1>
<%= link_to "Add a recipe", new_category_bookmark_path(@category) %>

<ul>
  <% @category.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.recipe.name %> |
      <%= link_to "Delete", bookmark_path(bookmark),
        data: {turbo_method: :delete,
        turbo_confirm: "Are you sure?"}
      %>

    </li>
  <% end %>
</ul>
<%= link_to 'Home', root_path %>
